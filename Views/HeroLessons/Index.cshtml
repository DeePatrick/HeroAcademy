@using Microsoft.AspNet.Identity;
@model IEnumerable<HeroAcademy.Models.HeroLesson>

@{
    ViewBag.Title = "Index";
}



<div class='panel-primary animated fadeIn'>
    <h3>Participants</h3>
</div>

<br />

<ul class="mangas">
    @foreach (var item in Model)
    {

        <li class="row">
            <hr />
            <div class="col-md-4">
                <div class="date">
                    <div class="month">
                        <img class="img-circle animated bounceInUp" width="100" height="100" src="data:image;base64,@System.Convert.ToBase64String(item.Student.ProfilePicture)" />
                    </div>
                    <div class="day">
                    </div>
                </div>
            </div>
            <span class="container-fluid">
                <span class="col-md-8">
                    <span class="artist">
                        Name : @Html.ActionLink(item.FullName, "Details", new { id = item.Id })<br />
                    </span>

                    <span>
                        Course Assigned : @Html.DisplayFor(modelItem => item.Course.Name)<br />
                    </span>
                    Year Enrolled : @Html.DisplayFor(modelItem => item.DateTime.Year)<br />
                </span>
            </span>
        </li>

    }
</ul>



<div class="panel-footer">
    <a class='btn btn-info' (click)='onBack()' style='width:80px'>
        Next
        <i class='glyphicon glyphicon-chevron-right'></i>
    </a>
</div>








