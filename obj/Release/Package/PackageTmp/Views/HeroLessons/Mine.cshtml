@using Microsoft.AspNet.Identity

@model IEnumerable<HeroAcademy.Models.HeroLesson>

@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class='panel-primary animated fadeIn'>
    <h3> My Program</h3>
</div>

<br />


<ul class="mangas">
    @foreach (var item in Model)
    {

        <li class="row">
            <hr />
            <div class="col-md-4 col-lg-4">
                <div class="month">
                    <img class="img-circle" width="100" height="100" src="data:image;base64,@System.Convert.ToBase64String(item.Student.ProfilePicture)" />
                </div>
                <div class="day">

                </div>
                <span class="col-md-8 col-lg-8">
                    <span>
                        Year Enrolled: @item.DateTime.Year<br />
                        Name :@Html.ActionLink(item.FullName, "Details", new { id = item.Id })
                    </span>
                    <br />
                    <span class="genre">
                        Course Assigned : @Html.DisplayFor(modelItem => item.Course.Name)
                    </span>
                </span>
            </div>
        </li>
        
        <li class="alert alert-warning">
            <a href="@Url.Action("Edit", "HeroLessons", new { id = item.Id })">
                Edit
            </a>
        </li>
    }
</ul>
@section scripts{

}
