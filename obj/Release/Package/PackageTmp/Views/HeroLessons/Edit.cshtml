@using HeroAcademy.CustomHtmlHelpers

@model HeroAcademy.ViewModels.HeroAcademyVM 

@{
    ViewBag.Title = "Edit";
}

<h2>Edit details of Program</h2>

@using (Html.BeginForm())
{
    <p class="alert alert-info">All fields are <strong>required</strong>.</p>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.FullName, "Full Name")
        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.FullName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Classroom)
        @Html.TextBoxFor(m => m.Classroom, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Classroom)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control", placeholder = "eg 1 Jan 2015" })
        @Html.ValidationMessageFor(m => m.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control", placeholder = "eg 20:00" })
        @Html.ValidationMessageFor(m => m.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DateOfBirth, "Birthday")
        @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control", placeholder = "eg 1 Jan 2015" })
        @Html.ValidationMessageFor(m => m.DateOfBirth)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Duration, "Length of Course")
        @Html.TextBoxFor(m => m.Duration, new { @class = "form-control", placeholder = "No format" })
        @Html.ValidationMessageFor(m => m.Duration)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Qualification)
        @Html.DropDownListFor(m => m.Qualification, new SelectList(Model.Qualifications, "Id", "Name"), "Select One", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Qualification)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Course)
        @Html.DropDownListFor(m => m.Course, new SelectList(Model.Courses, "Id", "Name"), "Select One", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Course)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Instructor)
        @Html.DropDownListFor(m => m.Instructor, new SelectList(Model.Instructors, "Id", "Name"), "Select One", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Instructor)
    </div>


    <input type="submit" value="Create" class="btn btn-primary" />


}
<br/>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
